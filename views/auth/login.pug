extends ../layouts/common.pug
block content
  h1 Login
  a(href="/") Back
  br
  br
  if errors
    each error in errors
      .alert.alert-danger=error

  form(action="/auth/login", method="POST")
    .form-group
      label(for='email') Email:
      input#email.form-control(type="text", name="email", value=values ? values.email : "")
    br    
    .form-group
    label(for='pass') Password:
    input#pass.form-control(type="password", name="password", value=values ? values.password : "")
    br
    button.btn.btn-primary Login     