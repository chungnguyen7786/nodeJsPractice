extends ../layouts/common.pug
block content
  h1 Transactions complete
  a(href="/transactions") Back
  br
  br
  label= transaction.userId
  span &nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;
  label= transaction.bookId
  span &nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;
  label Is complete:
  span &nbsp;
  label= transaction.isComplete
  br
  br
  form(action="/transactions/" + transaction.id + "/complete", method="POST")
